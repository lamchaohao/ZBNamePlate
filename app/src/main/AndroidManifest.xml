<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.gzz100.nameplate">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/> <!-- 定位所需权限 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/> <!-- 定位所需权限 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/> <!-- 允许程序改变网络链接状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/> <!-- 允许程序访问访问WIFI网络状态信息 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/> <!-- 允许程序改变WIFI链接状态 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name="com.gzz100.nameplate.App"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.gzz100.nameplate.activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.gzz100.nameplate.activity.ConnectHelpDiagActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog"/>
        <activity android:name="com.gzz100.nameplate.activity.EditActivity"/>
        <activity
            android:name="com.gzz100.nameplate.activity.WelcomeActivity"
            android:theme="@style/FullscreenForWel">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.gzz100.nameplate.activity.DeviceManageActivity">
        </activity>
        <activity android:name="com.gzz100.nameplate.activity.MultiSendActivity">
        </activity>
        <activity android:name="com.gzz100.nameplate.activity.SelectAccountActivity">
        </activity>
        <activity android:name="com.gzz100.nameplate.activity.AddFromFileActivity">
        </activity>
        <activity android:name="com.gzz100.nameplate.activity.BrightnessActivity">
        </activity>
        <activity android:name="com.gzz100.nameplate.activity.SortActivity">
        </activity>
        <activity android:name="com.gzz100.nameplate.activity.SelectEffectActivity">
        </activity>
        <activity android:name="com.gzz100.nameplate.activity.SelectFontActivity">
        </activity>
        <activity android:name="com.gzz100.nameplate.activity.ConnectActivity">
        </activity>
        <activity android:name="com.gzz100.nameplate.activity.AboutActivity">
        </activity>
        <activity android:name="com.gzz100.nameplate.activity.HelpActivity">
        </activity>
    </application>

</manifest>