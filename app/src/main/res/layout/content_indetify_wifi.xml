<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             app:cardCornerRadius="5dp"
             app:cardElevation="3dp"
             android:padding="15dp"
             android:layout_margin="5dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="5dp"
            android:id="@+id/ll_Conn_item"
            android:orientation="horizontal"
            android:background="@drawable/recycler_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_Conn_level"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_signal_wifi_3_bar_lock_light_blue_500_36dp"/>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/iv_Conn_level"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_Conn_deviceName"
                    android:textSize="18sp"
                    android:textColor="@color/textPrimary"
                    android:ellipsize="marquee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_Conn_wifiName"
                    android:textSize="14sp"
                    android:textColor="@color/textSecond"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_Conn_check"
                android:src="@drawable/ic_check_circle_green_500_36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
</android.support.v7.widget.CardView>