<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AddFromFileActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_add_fromQQ"
            android:text="从QQ文件目录"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/recycler_bg"
            android:drawableLeft="@drawable/tencentqq"
            android:layout_width="match_parent"
            android:layout_height="70dp"/>

        <TextView
            android:id="@+id/tv_add_fromWechat"
            android:text="从微信文件目录"
            android:layout_margin="5dp"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/recycler_bg"
            android:drawableLeft="@drawable/wechat"
            android:layout_width="match_parent"
            android:layout_height="70dp"/>

        <TextView
            android:id="@+id/tv_add_fromOther"
            android:text="其他目录"
            android:layout_margin="5dp"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/recycler_bg"
            android:drawableLeft="@drawable/ic_insert_drive_file_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"/>
        <TextView
            android:layout_margin="5dp"
            android:id="@+id/tv_add_decode"
            android:background="@drawable/recycler_bg"
            android:drawableLeft="@drawable/ic_autorenew_pink_a400_48dp"
            android:text="切换编码"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_add_selectResult"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_showName"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_send"
        android:layout_margin="10dp"
        android:src="@drawable/ic_check_white_24dp"
        app:rippleColor="#E0E0E0"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
